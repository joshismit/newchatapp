{
  "name": "newchatapp-backend",
  "version": "1.0.0",
  "description": "Express + Mongoose backend for chat app",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "watch": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start:dev": "npm run dev",
    "start:prod": "npm run build && npm start"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "body-parser": "^1.20.2",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.4",
    "multer": "^1.4.5-lts.1",
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/s3-request-presigner": "^3.490.0",
    "ioredis": "^5.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.5",
    "@types/body-parser": "^1.19.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/ioredis": "^5.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}

